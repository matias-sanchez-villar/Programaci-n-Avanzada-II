<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.AltaSolicitud">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="37dp">


        <Button
            android:id="@+id/btnCerrarSession"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:text="@string/Out_AltaCampana"
            android:textAlignment="textStart"
            android:textColor="#348708"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.925"
            app:layout_constraintStart_toEndOf="@+id/btnCerrar"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="35dp"
            tools:layout_conversion_absoluteWidth="113dp" />

        <Button
            android:id="@+id/btnCerrar"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:text="@string/Cerar_AltaCampana"
            android:textAlignment="center"
            android:textColor="#348708"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_conversion_absoluteHeight="32dp"
            tools:layout_conversion_absoluteWidth="41dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:text="@string/solicitanteAlta"
            android:textAlignment="center"
            android:textColor="#0C0C0B"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:layout_conversion_absoluteHeight="32dp"
            tools:layout_conversion_absoluteWidth="200dp"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="@string/solicitanteNombre"
            android:textSize="16sp"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/txtApellido"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="@string/solicitanteApellido"
            android:textSize="16sp"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/txtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:ems="10"
            android:hint="@string/solicitanteFechaFinSolicitud"
            android:inputType="date"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/spnLocalidad"
                android:layout_width="200dp"
                android:layout_height="43dp"
                android:contentDescription="@string/solicitanteTipoSangre"
                android:dropDownWidth="match_parent" />

            <Spinner
                android:id="@+id/spnProvincia"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:contentDescription="@string/solicitanteTipoSangre"
                android:dropDownWidth="match_parent" />

        </LinearLayout>

        <EditText
            android:id="@+id/txtDireccion"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="@string/solicitanteDireccion"
            android:textSize="16sp"
            android:inputType="textPostalAddress"/>

        <EditText
            android:id="@+id/txtCantDonante"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="@string/solicitanteCantDonates"
            android:inputType="number"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spnTipoSangre"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:contentDescription="@string/solicitanteTipoSangre"
            android:dropDownWidth="match_parent" />

        <Button
            android:id="@+id/btnGuardar"
            style="@style/Widget.Material3.Button"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#348708"
            android:text="@string/BotonGuardar"
            android:textSize="14sp"
            app:rippleColor="#4CAF50" />
    </LinearLayout>

</LinearLayout>