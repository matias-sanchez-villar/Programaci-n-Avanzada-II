<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PersonaFisicaActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="1" >

            <EditText
                android:id="@+id/nombrePersonaFisica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/nombrePersona"
                android:inputType="text"
                android:minHeight="38dp"
                android:paddingTop="10dp"/>

            <EditText
                android:id="@+id/apellidoPersonaFisica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/apellidoPersona"
                android:inputType="text"
                android:minHeight="38dp"
                android:paddingTop="10dp"/>

            <EditText
                android:id="@+id/telefonoPersona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/telefonoPersona"
                android:inputType="text"
                android:minHeight="38dp"
                android:paddingTop="10dp"/>

            <EditText
                android:id="@+id/dniPersona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Dni"
                android:inputType="number"
                android:minHeight="38dp"
                android:paddingTop="10dp"/>

            <EditText
                android:id="@+id/fechaNacPersona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/fechaNacPersona"
                android:inputType="date"
                android:minHeight="38dp"
                android:paddingTop="10dp"/>

            <EditText
                android:id="@+id/direccionPersona"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/direccionPersona"
                android:inputType="text"
                android:minHeight="38dp"
                android:paddingTop="10dp"/>

            <Spinner
                android:id="@+id/spnProvinciaPersonaFisica"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"/>

            <Spinner
                android:id="@+id/spnLocalidadPersonaFisica"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"/>

            <Button
                android:id="@+id/btnUsuarioActivity"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="SIGUIENTE">

            </Button>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>