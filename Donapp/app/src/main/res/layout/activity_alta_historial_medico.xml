<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AltaHistorialMedicoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            tools:ignore="MissingConstraints"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:text="@string/HistMedTitulo"
                    android:textAlignment="center"
                    android:textColor="#0C0C0B"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:layout_conversion_absoluteHeight="32dp"
                    tools:layout_conversion_absoluteWidth="200dp"
                    tools:layout_editor_absoluteX="41dp"
                    tools:layout_editor_absoluteY="0dp"
                    android:padding="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spnTipoSangres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/HistMedTipoSangre"
                    android:dropDownWidth="match_parent"
                    android:padding="25dp"
                    android:scaleType="center"/>

                <EditText
                    android:id="@+id/txtPeso"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="@string/HistMedPeso"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:padding="15dp"/>

                <EditText
                    android:id="@+id/txtAltura"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:hint="@string/HistMedAltura"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:padding="15dp"/>

                <EditText
                    android:id="@+id/txtFechaUltimaDonacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                    android:ems="10"
                    android:hint="@string/HistMedFechaUltimaDonacion"
                    android:inputType="date"
                    android:textSize="16sp"
                    android:padding="15dp"/>

                <TextView
                    android:id="@+id/txtTatuajes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/HistMedTatuajes"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:padding="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/cbxTatuajesTrue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedTrue"/>

                    <CheckBox
                        android:id="@+id/cbxTatuajesFalse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedFalse"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtHistMedEnfTranSexual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/HistMedEnfTasmSexual"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:padding="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/cbxTranSexualTrue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedTrue"/>

                    <CheckBox
                        android:id="@+id/cbxTranSexualFalse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedFalse"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtHistMedDrogas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/HistMedDrogas"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:padding="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/cbxDrogasTrue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedTrue"/>

                    <CheckBox
                        android:id="@+id/cbxDrogasFalse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedFalse"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtHistMedMedicamentos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/HistMedMedicamentos"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:padding="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/cbxMedicamentosTrue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedTrue"/>

                    <CheckBox
                        android:id="@+id/cbxMedicamentosFalse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedFalse"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtHistMedMinimas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/HistMedEnfMinimas"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:padding="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/cbxMedidasMinimasTrue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedTrue"/>

                    <CheckBox
                        android:id="@+id/cbxMedidasMinimasFalse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedFalse"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtHistMedEnfHepatitis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/HistMedEnfHepatitis"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:padding="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/cbxHepatitisTrue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedTrue"/>

                    <CheckBox
                        android:id="@+id/cbxHepatitisFalse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedFalse"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txtHistMedEnfermedades"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/HistMedEnfDefiniticas"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:padding="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <CheckBox
                        android:id="@+id/cbxDefinitivosTrue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedTrue"/>

                    <CheckBox
                        android:id="@+id/cbxDefinitivosFalse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/HistMedFalse"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btnGuardarHistMedico"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="248dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:backgroundTint="#348708"
                    android:onClick="onClickBtnGuardar"
                    android:padding="15dp"
                    android:text="@string/BotonGuardar"
                    android:textSize="14sp"
                    app:rippleColor="#4CAF50" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>